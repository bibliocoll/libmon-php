/* MEDIA QUERIES */

/* small */
@media only screen and (max-width: 40em) { 
div.newitem {
height: auto; 
font-size:large;
}
div.description {
font-size: small;
}
}

/* medium */
@media only screen and (min-width: 40.063em) and (max-width: 64em) { 
div.newitem {
height: auto;
}
div.description {
font-size: medium;
}
}

/* large */
@media only screen and (min-width: 64.063em) {
div.description {
font-size: medium;
}
}
 
